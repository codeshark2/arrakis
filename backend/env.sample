# Supabase Configuration
# IMPORTANT: Use ANON key for production (not SERVICE key) to enable Row Level Security
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# Perplexity AI Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenAI Configuration (Optional)
# OPENAI_API_KEY=your_openai_api_key_here

# Perplexity Search Configuration
PPLX_TARGET_SITES=25

# API Authentication
# Generate a secure API key: python -c "import secrets; print(secrets.token_urlsafe(32))"
ARRAKIS_API_KEY=your_secure_api_key_here

# Application Configuration
APP_NAME=Arrakis MVP
DEBUG=false  # Set to false in production
ENVIRONMENT=development

# CORS Origins (comma-separated)
# For production, restrict to your actual domains
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
